@model Htp.Library.Domain.Contracts.ViewModels.BookViewModel

@{

    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book library</h2>

<table class="table table-bordered table-hover">
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.Author)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Title)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Description)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Created)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Genre)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Language)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.IsPaper)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.DeliveryRequired)
        </td>
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(model => model.Author)
        </td>
        <td>
            @Html.DisplayFor(model => model.Title)
        </td>
        <td>
            @Html.DisplayFor(model => model.Description)
        </td>
        <td>
            @Html.DisplayFor(model => model.Created)
        </td>
        <td>
            @Html.DisplayFor(model => model.Genre)
        </td>
        <td>
            @Html.DisplayFor(model => model.Language)
        </td>
        <td>
            @Html.DisplayFor(model => model.IsPaper)
        </td>
        <td>
            @Html.DisplayFor(model => model.DeliveryRequired)
        </td>
    </tr>
</table>

@using (Html.BeginForm("Edit", "Book", FormMethod.Post))
{
    <div class="panel-success">
        <div class="panel-heading text-center">
            <h3>Add book</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(model => model.Author)
                @Html.TextBoxFor(model => model.Author, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description)
                @Html.TextAreaFor(model => model.Description, 3, 40, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Created)
                <input type="date" name="Created" class="form-control" />
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Genre)
                @Html.DropDownListFor(x => x.Genre, new SelectList(new string[] { "Crime", "Detective", "Science", "Fantasy", "Romance", "Other" }), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IsPaper)
                @Html.CheckBoxFor(x => x.IsPaper, new { @class = "btn btn-default" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Language)
                @Html.ListBoxFor(model => model.Language, new MultiSelectList(new string[] { "Russian", "English", "France" }), new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.DeliveryRequired)
                @Html.RadioButtonFor(model => model.DeliveryRequired, true, new { @class = "btn btn-default" })
                <span>Yes</span>
                @Html.RadioButtonFor(model => model.DeliveryRequired, false, new { @class = "btn btn-default" })
                <span>No</span>
            </div>
            <div class="form-group">
                <div class="text-center">
                    <input type="submit" value="Send" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}