<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>IT News Website - ASP.NET MVC 5</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- CSS -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,400">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Droid+Sans">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Lobster">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    @*<link rel="stylesheet" href="~/Content/bootstrap.css">*@
    @Styles.Render("~/andia-agency/css")
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="/Content/andia-agency/assets/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="@Url.Content("~/Content/andia-agency/assets/ico/apple-touch-icon-144-precomposed.png")">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="@Url.Content("~/Content/andia-agency/assets/ico/apple-touch-icon-114-precomposed.png")">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="@Url.Content("~/Content/andia-agency/assets/ico/apple-touch-icon-72-precomposed.png")">
    <link rel="apple-touch-icon-precomposed" href="@Url.Content("~/Content/andia-agency/assets/ico/apple-touch-icon-57-precomposed.png")">
</head>
<body>
    <!-- Header -->
    <div class="container">
        <div class="header row">
            <div class="span12">
                <div class="navbar">
                    <div class="navbar-inner">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <h1>
                            <a class="brand" href="/">IT Solutions start here...</a>
                        </h1>
                        <div class="nav-collapse collapse">
                            <ul class="nav pull-right" id="topmenucontrol">
                                @RenderSection("topmenu", required: false)
                            </ul>
                        </div>
                        @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    @Html.ActionLink("Add news", "Create", "Home")
                                </li>
                            </ul>
                        }
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Site Description -->
    <div class="presentation container">
        <form class="form-inline" action="/action_page.php">
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-success" type="submit">Search</button>
        </form>
        <h2><span class="darkturquoise">IT News website</span> application.</h2>
        <p>
            Using
            <a href="http://www.asp.net/mvc/tutorials/mvc-5/introduction/getting-started">asp.net mvc 5.0</a>
            for front-end page, Comments using <a href="https://dotnet.microsoft.com/apps/aspnet/real-time">SingalR</a>
            <i class="fa fa-paper-plane fa-fw"></i> and 
            @*<a href="http://www.asp.net/vnext/overview/aspnet-web-api">asp.net web api 2.0</a> &*@
            <a href="http://angularjs.org/">angularjs</a> for admin page
        </p>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <div class="testimonials container">
    </div>
     <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="widget span3">
                    <h4>About this site</h4>
                    <p>An example that used ASP.NET MVC 5 for implementing a IT News website.</p>
                    <p><a href="#">Read more...</a></p>
                </div>
                <div class="widget span3">
                    <h4>Latest Tweets</h4>
                    <div class="show-tweets"></div>
                </div>
                <div class="widget span3">
                    <h4>Flickr Photos</h4>
                    <ul class="flickr-feed"></ul>
                </div>
                <div class="widget span3">
                    <h4>Contact Me</h4>
                    <p><i class="icon-map-marker"></i> Address: 123 Dummy street, Dummy ward, Dummy district, Dummy city, Viet Nam</p>
                    <p><i class="icon-phone"></i> Phone: +1111 111 11 11</p>
                    <p><i class="icon-user"></i> Skype: itnews</p>
                    <p><i class="icon-envelope-alt"></i> Email: <a href="#">itnews@itmail.com</a></p>
                </div>
            </div>
            <div class="footer-border"></div>
            <div class="row">
                <div class="copyright span4">
                    <p>Copyright &copy; @DateTime.Now.Year</p>
                </div>
                <div class="social span8">
                    <a class="twitter" href="https://twitter.com/"></a>
                    <a class="github" href="https://github.com/"></a>
                    <a class="linkedin" href="http://www.linkedin.com/"></a>
                    <a class="facebook" href="https://www.facebook.com/"></a>
                </div>
            </div>
        </div>
    </footer>
    <!-- Javascript -->
    <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
    @Scripts.Render("~/andia-agency/scripts")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

