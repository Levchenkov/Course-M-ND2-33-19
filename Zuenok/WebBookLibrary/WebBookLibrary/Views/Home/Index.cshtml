@{
    ViewBag.Title = "Home Page";
}


    <h2 style="color:rgb(217, 232, 156)">Welcome to the Library!</h2>


<p class="btn bg-color-dark">
    @Html.ActionLink("Create new book", "Add")
</p>

<div class="row text-color-light">
    <div class="col-md-2">
        <table class="table table-hover">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>Created</th>
                <th>Genre</th>
                <th>Is Paper</th>
                <th>Languages</th>
                <th>Delivery</th>
                <th></th>
            </tr>

            @foreach (var item in ViewBag.Books)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Author</td>
                    <td>@item.Created.ToString("yyy")</td>
                    <td>@item.Genre</td>
                    <td>@item.IsPaper</td>
                    <td>@string.Join("/", item.Languages)</td>
                    <td>@item.DeliveryRequired</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                    </td>
                </tr>
            }
        </table>
    </div>
</div>