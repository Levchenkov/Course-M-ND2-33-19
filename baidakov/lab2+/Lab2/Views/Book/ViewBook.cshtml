@{
    ViewBag.Title = "Home Page";
}

<div class="row text-color-light">
    <div class="col-md-2">
        <table class="table table-hover">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Description</th>
                <th>Created</th>
                <th>Genre</th>
                <th>Is Paper</th>
                <th>Languages</th>
                <th>Delivery</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.Description</td>
                    <td>@item.Created.ToShortDateString()</td>
                    <td>@item.Genre</td>
                    <td>@item.IsPaper</td>
                    <td>@string.Join("/", item.Languages)</td>
                    <td>@item.DeliveryRequired</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>